<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?> 
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jntecthnology.josias_comp228lab4.HelloController"
            prefWidth="1300" prefHeight="400">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

  <!-- We used prefWidth and prefHeight to set preferred sizes and avoid java to resize components -->
    <center>
        <HBox spacing="30">
            <GridPane hgap="10" vgap="10">
                
                <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="fullNameField" promptText="Enter full name"
                           GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="250"/>

                <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="addressField" promptText="Enter address"
                           GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="250"/>

                <Label text="Province:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="provinceField" promptText="Enter province"
                           GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="250"/>

                <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="cityField" promptText="Enter city"
                           GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="250"/>

                <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="postalCodeField" promptText="Enter postal code"
                           GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="250"/>

                <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="phoneField" promptText="Enter phone number"
                           GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="250"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="emailField" promptText="Enter email"
                           GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="250"/>
            </GridPane>

            <VBox spacing="10">
                <Label text="Activities:"/>
                <CheckBox fx:id="studentCouncilCheckBox" text="Student Council"/>
                <CheckBox fx:id="volunteerCheckBox" text="Volunteer Work"/>
            </VBox>

            <VBox spacing="15">
                <Label text="Select Major:"/>
                <HBox spacing="15">
                    <RadioButton fx:id="computerScienceRadio" text="Computer Science" onAction="#majorSelection">
                        <toggleGroup>
                            <ToggleGroup fx:id="majorGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="businessRadio" text="Business" toggleGroup="$majorGroup" onAction="#majorSelection"/>
                </HBox>

                <ComboBox fx:id="courseComboBox" promptText="Choose a course" prefWidth="250"
                          onAction="#courseSelection"/>
                <ListView fx:id="courseListView" prefHeight="120" prefWidth="250"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <Button text="Display" onAction="#displayInfo" prefWidth="100"/>
            <TextArea fx:id="displayTextArea" prefHeight="80" editable="false" wrapText="true"/>
        </VBox>
    </bottom>
</BorderPane>
